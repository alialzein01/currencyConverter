<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2929"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/llValue"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:background="#A39B56"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="LL Value"
        android:textAlignment="center"
        android:textColor="#EDE5E5"
        app:layout_constraintBottom_toTopOf="@+id/convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usdValue" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:background="#A39B56"
        android:ems="10"
        android:inputType="number"
        android:text="Rate: 22,000 LL / USD"
        android:textAlignment="center"
        android:textColor="#EFE9E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Currency Converter"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EDE6E6"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="convert"
        android:text="Convert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llValue" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="105dp"
        android:layout_height="134dp"
        android:layout_marginTop="464dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:srcCompat="@drawable/png_transparent_dollar_sign_united_states_dollar_currency_symbol_e_currency_text_trademark_logo_thumbnail"
        tools:layout_editor_absoluteX="290dp" />

    <EditText
        android:id="@+id/usdValue"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:background="#A39B56"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="USD Value"
        android:textAlignment="center"
        android:textColor="#EDE5E5"
        app:layout_constraintBottom_toTopOf="@+id/llValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>